---
layout: page
pagination:
  data: collections.post
  size: 3
  alias: posts
tags: nav
navtitle: Posts
order: 2
---

<article class="">
  <h1 class="">Posts</h1>
  <div>
    <ul>
    {% for post in posts %}
      <li>
        <a href="{{post.url | url}}">
          {{ post.data.title }}
        </a>
        | {{ (post.data.tags or [] | exclude('post')) | join(', ') }}
        | {{ post.date.toDateString() }}

        <p>{{ [post.data.page.excerpt, (post.templateContent | striptags | truncate(240))] | firstValue }}</p>
      </li>
    {% endfor %}
    </ul>
  </div>

	<nav class="mx-auto py-3">
		{%- if pagination.previousPageHref -%}
    <a href="{{ pagination.previousPageHref | url }}">Previous</a>
		{%- endif -%}
		{%- if pagination.nextPageHref -%}
    <a href="{{ pagination.nextPageHref | url }}">Next</a>
		{%- endif -%}
  </nav>
</article>
